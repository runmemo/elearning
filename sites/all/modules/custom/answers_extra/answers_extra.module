/**
 *  Implements hook_preprocess_views_view_fields 
 *  for relevant_questions_list view.
 */
function answers_extra_preprocess_views_view_fields(&$vars) {
  $view = $vars['view'];
 // print_nice($view, 3);
  $question_list_views = array('relevant_questions_list', 'user_questions_list');
  if (!in_array($view->name, $question_list_views)) {
    return;
  }
  
  $row = $vars['row'];
  if (isset($row->field_field_answer_count[0])) {
    $answers = $row->field_field_answer_count[0]['raw']['count'];
    $ccs_classes = 'field-answer-count';
    if (!$answers) {
      $ccs_classes = $ccs_classes . ' zero';
    }
    $output = 
     '<div class="' . $ccs_classes .  '">' .
       format_plural($answers, '1 <br />Answer', '@count <br />Answers') . 
     '</div>';
    
    // Replace content of the field.
    $answers_count_field = $vars['fields']['field_answer_count'];
    $answers_count_field->content = $output;
  }  
}

/**
 * Implements hook_userpoints().
 * 
 * Prevents account's userpoints from going (further) negative.
 */
function answers_extra_userpoints($op, &$params) {
  if ($op == 'points before' && isset($params['points']) && $params['points'] < 0) {
    $current_points = userpoints_get_current_points($params['uid'], $params['tid']);
    answers_extra_process_points($params, $current_points);
  }
}

/**
 * Processes transaction's points and changes amount in case of new amount
 * is going to be negative.
 * 
 * @param array $params
 *   Userpoints transaction parameters.
 * @param integer $current_points
 *   Current user points amount.
 */
function answers_extra_process_points(&$params, $current_points) {
  $new_points = $current_points + $params['points'];
  // If points are going to be negative or negative already amend current
  // transaction's points in order to set points to zero.
  if ($new_points < 0) {
    $params['points'] = 0 - $current_points;
    return TRUE;
  }
}

